@page 
@model RatingStudents.Pages.Students.IndexModel
@{
    ViewData["Title"] = "Students";
}
<div class="text-center">
    <h3>Students</h3>
    <a asp-page="Add">Add student</a>
    <form method="post">
        <table>
            <tr>
                <th>Last name</th>
                <th>First name</th>
                <th>Middle name</th>
                <th>Phone number</th>
                <th>Date of birth</th>
                <th>Address</th>
                <th>Change</th>
                <th>Remove</th>
            </tr>
            @foreach (var student in Model.Students)
            {
                <tr>
                    <td> @student.LastName </td>
                    <td> @student.FirstName </td>
                    <td> @student.MiddleName </td>
                    <td> @student.PhoneNumber </td>
                    <td> @student.DateOfBirth.ToString("dd.M.yyyy") </td>
                    <td> @student.Street @student.NumberOfHouse/@student.NumberOfFlat</td>
                    <td><a href="~/Students/Edit/@student.Id"><i class="far fa-edit"></i></a></td>
                    <td><button asp-page-handler="Delete" asp-route-id="@student.Id" onclick="return confirm('Do you want to remove information about this student?');"><i class="far fa-trash-alt"></i></button></td>
                </tr>
            }
        </table>
    </form>
</div>