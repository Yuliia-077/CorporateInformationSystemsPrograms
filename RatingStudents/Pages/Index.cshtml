@page
@model IndexModel
@{
    ViewData["Title"] = "Rating Students";
}

<div class="text-center">
    <h3>Student Rating</h3>
    <a asp-page="Add">Add student rating</a>
    <form method="post">
        <table>
            <tr>
                <th>Student</th>
                <th>Subject</th>
                <th>Mark</th>
                <th>Date</th>
                <th>Change</th>
                <th>Remove</th>
            </tr>
            @foreach (var rating in Model.Rating)
            {
                <tr>
                    <td> @rating.Student.LastName @rating.Student.FirstName </td>
                    <td> @rating.Subject.Name </td>
                    <td> @rating.Rating.Mark </td>
                    <td> @rating.Rating.DateRating.ToString("dd.M.yyyy") </td>
                    <td><a href="~/Edit/@rating.Rating.Id"><i class="far fa-edit"></i></a></td>
                    <td><button asp-page-handler="Delete" asp-route-id="@rating.Rating.Id" onclick="return confirm('Do you want to remove information about this student\`s rating?');"><i class="far fa-trash-alt"></i></button></td>
                </tr>
            }
        </table>
    </form>
</div>