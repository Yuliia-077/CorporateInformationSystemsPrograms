@model IEnumerable<StudentRating.Models.Teacher>
@{
    ViewData["Title"] = "Teachers";
}

<div class="text-center">
    <h3>Teachers</h3>
    <a asp-action="Add">Add teacher</a>
    <table>
        <tr>
            <th>Last name</th>
            <th>First name</th>
            <th>Middle name</th>
            <th>Change</th>
            <th>Remove</th>
        </tr>
        @foreach (var student in Model)
        {
            <tr>
                <td> @student.LastName </td>
                <td> @student.FirstName </td>
                <td> @student.MiddleName </td>
                <td><a href="~/Teachers/Edit/@student.Id"><i class="far fa-edit"></i></a></td>
                <td><a href="~/Teachers/Delete/@student.Id" onclick="return confirm('Do you want to remove information about this teacher?');"><i class="far fa-trash-alt"></i></a></td>
            </tr>
        }
    </table>
</div>