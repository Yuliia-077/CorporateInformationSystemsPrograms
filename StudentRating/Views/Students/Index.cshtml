@model IEnumerable<StudentRating.Models.Student>
@{
    ViewData["Title"] = "Students";
}

<div class="text-center">
    <h3>Students</h3>
    <a asp-action="Add">Add student</a>
    <table>
        <tr>
            <th>Last name</th>
            <th>First name</th>
            <th>Middle name</th>
            <th>Phone number</th>
            <th>Date of birth</th>
            <th>Address</th>
            <th>Change</th>
            <th>Remove</th>
        </tr>
        @foreach (var student in Model)
        {
            <tr>
                <td> @student.LastName </td>
                <td> @student.FirstName </td>
                <td> @student.MiddleName </td>
                <td> @student.PhoneNumber </td>
                <td> @student.DateOfBirth.ToString("dd.M.yyyy") </td>
                <td> @student.Street @student.NumberOfHouse/@student.NumberOfFlat</td>
                <td><a href="~/Students/Edit/@student.Id"><i class="far fa-edit"></i></a></td>
                <td><a href="~/Students/Delete/@student.Id" onclick="return confirm('Do you want to remove information about this student?');"><i class="far fa-trash-alt"></i></a></td>
            </tr>
        }
    </table>
</div>